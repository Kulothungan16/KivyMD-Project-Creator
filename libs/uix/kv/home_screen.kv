<HomeScreen>

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_y": .7}
        adaptive_height: True

        Image:
            source: "assets/images/logo.png"
            size_hint_y: None

    CustomLabel:
        text: "A Tool to Create Project for KivyMD"
        halign: "center"
        pos_hint: {"center_y": .6}
        font_style: "Body1"
        theme_text_color: "Hint"

    CustomLabel:
        text: "KivyMD Project Creator"
        halign: "center"
        pos_hint: {"center_y": .5}
        font_style: "H1"
        font_size: sp(56)


    MDFillRoundFlatIconButton:
        text: "Create New Project"
        icon: "plus"
        pos_hint: {"center_x": .5, "center_y": .35}
        on_release: root.change_to_templates()

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"

        MDIconButton:
            icon: "information"
